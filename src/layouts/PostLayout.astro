---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";
import formatDate from "../lib/formatDate";
const { frontmatter } = Astro.props; // post
const { title, description, date, updated, cover, category, author } = frontmatter;
---

<BaseLayout title={`${title} — Versocracia`} description={description} ogImage={cover}>
  <article class="prose mx-auto max-w-3xl px-4 py-10">
    <p class="text-oliva text-sm tracking-wide uppercase">{category}</p>
    <h1 class="font-serif">{title}</h1>
    <p class="text-pizarra/70 text-sm">
      {formatDate(date)}{updated ? ` · actualizado ${formatDate(updated)}` : ""} · Por {author}
    </p>

    {cover && <img src={cover} alt={title} class="my-6 rounded-xl" />}

    <slot />
  </article>
</BaseLayout>
