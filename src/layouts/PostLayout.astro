---
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';
import formatDate from '../lib/formatDate';
const { frontmatter } = Astro.props; // post
const { title, description, date, updated, cover, category, author } = frontmatter;
---
<BaseLayout title={`${title} — Versocracia`} description={description} ogImage={cover}>
  <article class="mx-auto max-w-3xl px-4 py-10 prose">
    <p class="text-sm text-oliva uppercase tracking-wide">{category}</p>
    <h1 class="font-serif">{title}</h1>
    <p class="text-sm text-pizarra/70">{formatDate(date)}{updated ? ` · actualizado ${formatDate(updated)}` : ''} · Por {author}</p>

    {cover && <img src={cover} alt={title} class="rounded-xl my-6" />}

    <slot />

  </article>
</BaseLayout>
