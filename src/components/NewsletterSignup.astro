---
// Props opcionales: title, description
const {
  title = "Suscríbete al boletín",
  description = "Quincenal. Un mini–ensayo exclusivo, lecturas recomendadas y una guía práctica.",
} = Astro.props;
---

<section class="my-8 rounded-2xl border border-black/5 bg-white p-8" id="newsletter">
  <h2 class="text-tinta font-serif text-2xl">{title}</h2>
  <p class="text-pizarra/90 mt-1 text-sm">{description}</p>
  <form
    class="mt-5 flex flex-col gap-3 sm:flex-row"
    onsubmit="event.preventDefault(); const e=this.querySelector('input[type=email]'); alert(`¡Gracias por suscribirte, ${e.value||'lector'}!`); e.value='';"
  >
    <input
      type="email"
      name="email"
      required
      placeholder="tu@email.com"
      aria-label="Correo electrónico"
      class="focus:ring-carmin flex-1 rounded-2xl border border-black/10 px-4 py-3 outline-none focus:ring-2"
    />
    <button type="submit" class="bg-carmin rounded-2xl px-5 py-3 text-white shadow hover:shadow-md"
      >Recibir</button
    >
  </form>
  <p class="text-pizarra/70 mt-2 text-xs">Sin spam. Puedes darte de baja cuando quieras.</p>
</section>
