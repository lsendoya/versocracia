---
import formatDate from '../lib/formatDate';
const { post } = Astro.props; // { id, slug, data }
const { data } = post;
const href = `/${data.category}/${post.slug}/`;
---
<article class="bg-white rounded-2xl p-5 shadow ring-1 ring-black/5">
  <a href={href} class="block">
    <p class="text-xs text-oliva uppercase">{data.category}</p>
    <h3 class="mt-1 font-semibold text-tinta">{data.title}</h3>
    <p class="mt-2 text-sm line-clamp-3">{data.description}</p>
    <p class="mt-3 text-xs text-pizarra/70">{formatDate(data.date)}</p>
  </a>
</article>
